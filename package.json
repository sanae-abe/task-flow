  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:pwa": "playwright test e2e/tests/pwa.spec.ts e2e/tests/pwa-basic.spec.ts --project=chromium",
    "test:e2e:pwa:all": "playwright test e2e/tests/pwa.spec.ts --project=chromium --project=firefox --project=webkit",
    "test:e2e:pwa:basic": "playwright test e2e/tests/pwa-basic.spec.ts --project=chromium",
    "test:e2e:pwa:ui": "playwright test e2e/tests/pwa.spec.ts --ui",
    "test:e2e:pwa:debug": "playwright test e2e/tests/pwa.spec.ts --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "monitor:browser": "tsx scripts/monitor-browser-errors.ts",
    "test:browser-errors": "npm run test:e2e -- e2e/browser-errors.spec.ts",
    "test:all-errors": "npm run test:run && npm run test:browser-errors",
    "detect-errors": "npm run typecheck && npm run test:all-errors",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,scss,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,scss,md}",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "quality": "npm run lint:check && npm run format:check && npm run typecheck",
    "quality:fix": "npm run lint && npm run format && npm run typecheck",
    "analyze": "ANALYZE=true npm run build",
    "build:prod": "npm run build && npm run preview",
    "perf:build": "npm run build && npm run perf:lighthouse && npm run perf:web-vitals",
    "perf:lighthouse": "lhci autorun",
    "perf:lighthouse:collect": "lhci collect",
    "perf:lighthouse:assert": "lhci assert",
    "perf:lighthouse:prod": "node scripts/lighthouse-production.js",
    "perf:web-vitals": "node scripts/measure-web-vitals.js",
    "perf:bundle": "ANALYZE=true npm run build",
    "perf:report": "npm run perf:bundle && npm run perf:lighthouse:prod",
    "perf:budget": "npm run build && lhci assert --budgetsFile=performance-budget.json",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:security": "npm audit --audit-level=high && npm run lint:security",
    "lint:security": "eslint src --ext .ts,.tsx --config .eslintrc.security.js",
    "check-deps": "npm outdated",
    "pre-commit": "npm run quality:fix && npm run test:ci"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie 11",
      "not op_mini all",
      "not ios_saf < 12",
      "not and_uc < 12.12"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version",
      "last 2 edge version"
    ]
  }
}
