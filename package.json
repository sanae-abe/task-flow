  "private": true,
  "homepage": "./",
  "keywords": [
    "taskflow",
    "task-management",
    "react",
    "typescript",
    "productivity"
  ],
  "author": "Sanae Abe",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
