{
  "name": "taskflow-graphql",
  "version": "1.0.0",
  "description": "TaskFlow GraphQL API Server",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "taskflow-mcp": "dist/mcp/server.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "mcp": "tsx src/mcp/server.ts",
    "mcp:build": "tsc && node dist/mcp/server.js",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "validate-schema": "graphql-schema-linter src/schema/schema.graphql"
  },
  "keywords": [
    "graphql",
    "apollo",
    "taskflow",
    "api",
    "mcp"
  ],
  "author": "TaskFlow Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^10.0.2",
    "@lifeomic/attempt": "^3.1.0",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "fast-diff": "^1.3.0",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "idb": "^8.0.3",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.31.0",
    "lodash-es": "^4.17.21",
    "openai": "^6.8.1",
    "opossum": "^5.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "uuid": "^13.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.0",
    "@types/opossum": "^8.1.9",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "fake-indexeddb": "^6.2.5",
    "graphql-schema-linter": "^3.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
